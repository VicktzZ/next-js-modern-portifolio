{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "env": {
      "browser": true,
      "es2021": true
  },
  "plugins": [
      "react",
      "@typescript-eslint",
      "react-hooks",
      "prettier",
      "unicorn"
  ],
  "extends": [
      "plugin:react/recommended",
      "standard-with-typescript",
      "eslint:recommended",
      "prettier",
      "plugin:prettier/recommended",
      "next/core-web-vitals"
  ],
  "overrides": [],
  "settings": {
      "react": {
          "version": "18.2"
      },
      "import/resolver": {
          "node": {
              "paths": [
                  "src"
              ]
          },
          "typescript": {}
      }
  },
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "rules": {
    "react/prop-types": "off",
    "no-unused-vars": "warn",
    "@typescript-eslint/no-non-null-assertion": "off",
    "comma-dangle": [
      "error",
      "never"
    ],
    "import/no-extraneous-dependencies": [
        "off"
    ],
    "import/no-duplicates": [
        "off"
    ],
    "no-multiple-empty-lines": "error",
    "indent": [
        "error",
        2
    ],
    "object-curly-spacing": [
        2,
        "always"
    ],
    "array-bracket-spacing": [
        2,
        "always"
    ],
    "arrow-spacing": "error",
    "space-before-blocks": "error",
    "block-spacing": "error",
    "linebreak-style": 0
  }
}